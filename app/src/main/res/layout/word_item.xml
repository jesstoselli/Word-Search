<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/wordItem_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/zinc_800"
        android:paddingHorizontal="@dimen/margin_half"
        android:paddingVertical="@dimen/margin_standard"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small"
        app:fontFamily="@font/inter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/title_history" />

</androidx.constraintlayout.widget.ConstraintLayout>
