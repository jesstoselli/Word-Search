<resources>
    <!-- Base application theme. -->
    <style name="Theme.CoodeshChallengeWordSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/zinc_900</item>
        <item name="colorPrimaryVariant">@color/zinc_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_magenta</item>
        <item name="colorSecondaryVariant">@color/zinc_500</item>
        <item name="colorOnSecondary">@color/zinc_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/zinc_900</item>
        <item name="backgroundTint">@color/accent_magenta</item>
        <item name="strokeColor">@color/zinc_900</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/accent_magenta</item>
        <item name="backgroundTint">@color/zinc_900</item>
        <item name="strokeColor">@color/accent_magenta</item>
    </style>
</resources>
